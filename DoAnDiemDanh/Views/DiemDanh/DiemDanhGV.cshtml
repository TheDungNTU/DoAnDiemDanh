@using DoAnDiemDanh.Models
@{
    ViewBag.Title = "Điểm danh giảng viên";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
    IEnumerable<MONHOC> MONHOC = (IEnumerable<MONHOC>)ViewBag.MonHoc;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","DiemDanh")">Trang Chủ</a></li>
        <li class="breadcrumb-item " aria-current="page">Điểm danh giảng viên</li>
    </ol>
</nav>
<div class="row">
    @foreach (var item in MONHOC)
    {
        <div class="col-lg-5">
            <!-- Basic Card Example -->
            <div class=" mb-4">
                <div class="courses-container">
                    <div class="course">
                        <div class="course-info">
                            <div class="progress-container">
                                <span class="progress-text">
                                   
                                </span>
                            </div>
                            <h6></h6>
                            <h2>@item.TenMH</h2>
                            <a class="btn1" href="@Url.Action("XemDiemDanhGV", "DiemDanh", new { @MaMH = item.MaMH })">Nhóm môn học</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

